package routes

import (
	"bensmith.sh"
	"bensmith.sh/components"
)

// Renders a `Page` that has content generated from a markdown file
templ MarkdownPageRoute(page *bs.Page) {
	@components.Head(page.Title)
	@components.WithMainNav() {
		<article>
			<h1>{ page.Title }</h1>
			<section>
				@components.Unsafe(page.Content)
			</section>
		</article>
	}
}
