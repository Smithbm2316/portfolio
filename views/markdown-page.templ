package views

import (
	"bensmith.sh/models"
	"bensmith.sh/views/components"
)

// Renders a `Page` that has content generated from a markdown file
templ MarkdownPageRoute(page *models.Page) {
	<html lang="en">
		@components.Head(page.Title)
		@components.WithMainNav() {
			<article>
				<h1>{ page.Title }</h1>
				<section>
					@components.Unsafe(page.Content)
				</section>
			</article>
		}
	</html>
}
