package components

import (
	"bensmith.sh/models"
)

var links = []models.Link{
	{Url: "/", Text: "Ben Smith"},
	{Url: "/projects", Text: "Projects"},
	{Url: "/words", Text: "Writing"},
	{Url: "/uses", Text: "Uses"},
}

templ WithMainNav() {
	<main>
		@MainNav(templ.Attributes{"aria-label": "Main navigation"})
		{ children... }
	</main>
}

templ MainNav(attrs templ.Attributes) {
	<nav { attrs... }>
		<ul>
			for _, link := range links {
				<li webc:for="link of links">
					<a href={ templ.SafeURL(link.Url) }>{ link.Text }</a>
				</li>
			}
		</ul>
	</nav>
}
