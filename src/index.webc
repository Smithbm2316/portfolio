<main class="flow">
  <h1>Hey, I'm Ben Smith</h1>
  <p @text="site.description"></p>

  <ul>
    <li webc:for="link of socials">
      <a rel="noreferrer" :href="link.href" @text="link.text"></a>
    </li>
  </ul>

  <p>
    <span @text="p1[0]"></span>
    <a href="https://www.vincit.com" rel="noreferrer" @text="p1[1]"></a>
    <span @text="p1[2]"></span>
  </p>
  <p>
    <span @text="p2[0]"></span>
    <em @text="p2[1]"></em>
  </p>
  <p @text="p3[0]"></p>
</main>

<style>
